# ===========================================
# EGO Web - Environment Variables
# ===========================================
# Copy this file to .env for local development
# Note: Vite only exposes vars prefixed with VITE_
# ===========================================

# -------------------------------------------
# Application Configuration
# -------------------------------------------

# Application environment (development, staging, production)
VITE_APP_ENV=development

# Application base URL (used for canonical URLs, redirects, etc)
VITE_APP_URL=http://localhost:8080

# API Base URL (for backend services when implemented)
# VITE_API_URL=https://api.ego-platform.com
VITE_API_URL=http://localhost:3000/api

# -------------------------------------------
# Feature Flags
# -------------------------------------------

# Enable/disable analytics
VITE_ENABLE_ANALYTICS=false

# Enable/disable error reporting (e.g., Sentry)
VITE_ENABLE_ERROR_REPORTING=false

# Enable/disable debug mode
VITE_DEBUG_MODE=true

# -------------------------------------------
# SEO & Social Media
# -------------------------------------------

# Open Graph image URL (for social media sharing)
VITE_OG_IMAGE_URL=https://your-domain.com/og-image.png

# Twitter handle (without @)
VITE_TWITTER_HANDLE=YourTwitterHandle

# Site name
VITE_SITE_NAME=EGO - Internal Developer Portal

# -------------------------------------------
# Third-Party Services (Optional)
# -------------------------------------------

# Google Analytics ID (if VITE_ENABLE_ANALYTICS=true)
# VITE_GA_ID=G-XXXXXXXXXX

# Sentry DSN (if VITE_ENABLE_ERROR_REPORTING=true)
# VITE_SENTRY_DSN=https://xxxxx@sentry.io/xxxxx

# Intercom App ID (if using Intercom)
# VITE_INTERCOM_APP_ID=xxxxx

# -------------------------------------------
# Development Server (Vite)
# -------------------------------------------
# Note: These are used in vite.config.ts, not prefixed with VITE_
# They are read directly by Node.js during build

# Development server port
PORT=8080

# Development server host
HOST=::

# -------------------------------------------
# Demo Request Form
# -------------------------------------------

# Email endpoint for demo requests
# VITE_DEMO_REQUEST_ENDPOINT=https://api.ego-platform.com/v1/demo-requests

# -------------------------------------------
# Integration Logos
# -------------------------------------------
# Note: Currently using CDN URLs
# Consider hosting logos locally for better reliability
# See: src/components/Integrations.tsx

# -------------------------------------------
# Build Configuration
# -------------------------------------------

# Enable source maps in production
VITE_SOURCEMAPS=false

# Base path for deployment (e.g., /app for subdirectory deployment)
# VITE_BASE_PATH=/
